<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.currencyapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/button2"
        android:gravity="center"
        android:text="Currency App"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <Button
        android:id="@+id/poundbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="131dp"
        android:onClick="poundToTakaConvert"
        android:padding="10dp"
        android:text="Convert pound"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="43dp"
        android:onClick="DollerConvert"
        android:padding="10dp"
        android:text="ConvertDoller"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/doller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignEnd="@+id/textView"
        android:ems="10"
        android:hint="Enter doller"
        android:inputType="number" />

    <EditText
        android:id="@+id/pound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/poundbutton"
        android:layout_alignStart="@+id/doller"
        android:hint="enter pound"
        android:ems="10"
        android:inputType="number" />
</RelativeLayout>
